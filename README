Arduino library for the ST TDA7418 3 band car audio processor

Currently using IDE version 1.8.2

Current functions:


byte begin();   Initialize TDA7418 and library to default power on values

void source(byte _source);              Configure the currently used input
Valid sources: INPUT_MUTE, INPUT_SE1, INPUT_SE2, INPUT_SE3, INPUT_SE4_PD

void inputgain(byte _value);            Configure the input gain
Valid value range: 0 to 15

void diffinmode(byte _mode);            Configure pseudo-differential mode for PD4/PD
Valid modes:    PD, SE

void volume(byte _volume);              Set volume
Valid values:   -79 to 15    *

void volumesoftstep(byte _state);       Enable/Disable volume soft step
Valid values:   enable, disable

void attenuator(char _value);

void attenuator(byte _channel, char _value);

void loudnessattenuator(int _value);    Set loudness attenuator
Valid value range:  0 to -15

void loudnesscenterfreq(int _freq);     Configure loudness filter/center frequency
Valid frequencies:  400, 800, 2400

void loudnessshape(byte _shape);        Configure loudness shape
Valid shapes:   LOW, LOWHIGH

void loudnesssoftstep(byte _state);     Enable/Disable loudness soft step
Valid values:   enable, disable

void trebleatt(int _value);             Set treble attenuator
Valid values:   -15 to 15    

void treblecenterfreq(int _freq);       Configure treble center frequency
Valid frequencies:  10000, 12500, 15000, 17500

void middleatt(int _value);             Set middle attenuator
Valid values:   -15 to 15

void middlecenterfreq(int _freq);       Configure middle center frequency
Valid frequencies:  500, 1000, 1500, 2500

void middleqf(byte _factor);            Configure middle Q-Factor
Valid factors:  MID_QF_050, MID_QF_075, MID_QF_100, MID_QF_125

void middlesoftstep(byte _state);       Enable/Disable middle soft step
Valid values: enable, disable

void bassatt(int _value);               Set bass attenuator
Valid values:   -15 to 15    

void basscenterfreq(byte _freq);        Configure bass center frequency
Valid frequencies:  60, 80, 100, 200

void bassqf(byte _factor);              Configure bass Q-Factor
Valid values:   BASS_QF_100, BASS_QF_125, BASS_QF_150, BASS_QF_200

void basssoftstep(byte _state);         Enable/Disable bass soft step
Valid values:   enable, disable

void bassdcmode(byte _state);           Enable/Disable bass DC mode
Valid values:   enable, disable

void smoothingfilter(byte _state);      Enable/Disable smoothing filter
Valid values:   enable, disable

byte softmute();                        Get soft mute state
Returns:    0 or 1

void softmute(byte _state);             Enable/Disable soft mute
Valid values:   enable, disable

void softmutetime(byte _value);         Configure soft mute time
Valid values:   SMT_048, SMT_096, SMT_123
 *** See datasheet for actual values in ms ***

void softsteptime(byte _value);         Configure soft step time
Valid values:   SST_016, SST_032, SST_064, SST_128, SST_256, SST_512, SST_1024, SST2048
 *** See datasheet for actual values in ms ***

void autozero(byte _state);             Enable/Disable autozero function
Valid values: enable, disable

void testmode(byte _state);             Enable/Disable test mode
Valid values: enable, disable

void testmux(byte _value);              Configure test multiplexer
Valid values:   InMuxOutR, LoudOutR, VolumeOutR, VGB126, REF5V5, SSCLK, SMCLK, Clk200kHz

void schlock(byte _state);              Configure Schlock mode
Valid values:   NORMAL_MODE, FAST_MODE

void mutepincfg(byte _value);           Configure mute pin
Valid values:   MUX_OUT, EXT_CLK, MUTE_PIN

